<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\User" table="user">
    <indexes>
      <index name="gender" columns="gender"/>
      <index name="degree" columns="degree"/>
      <index name="country_index" columns="country"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="familyName" type="string" column="family_name" length="200" nullable="true"/>
    <field name="givenName" type="string" column="given_name" length="200" nullable="true"/>
    <field name="institution" type="string" column="institution" length="150" nullable="true"/>
    <field name="position" type="string" column="position" length="100" nullable="true"/>
    <field name="phoneNumber" type="string" column="phone_number" length="15" nullable="true"/>
    <field name="address" type="string" column="address" length="150" nullable="true"/>
    <field name="city" type="string" column="city" length="150" nullable="true"/>
    <field name="postalCode" type="string" column="postal_code" length="15" nullable="true"/>
    <field name="user" type="string" column="user" length="45" nullable="true"/>
    <field name="password" type="string" column="password" length="45" nullable="true"/>
    <field name="lastLogin" type="datetime" column="last_login" nullable="true"/>
    <field name="lastIp" type="string" column="last_ip" length="15" nullable="true"/>
    <field name="registerDate" type="datetime" column="register_date" nullable="true"/>
    <many-to-one field="degree" target-entity="Degree">
      <join-columns>
        <join-column name="degree" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="gender" target-entity="Gender">
      <join-columns>
        <join-column name="gender" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="country" target-entity="Countries">
      <join-columns>
        <join-column name="country" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
